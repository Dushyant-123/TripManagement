<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/lin_lay"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:gravity="center"
    android:background="@color/thamebackground"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/splash"
        android:layout_width="@dimen/margin500dp"
        android:layout_height="@dimen/margin300dp"
        android:layout_gravity="center"
        android:src="@mipmap/applogo" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:gravity="center"
        android:textSize="@dimen/margin25"
        android:text="@string/app_name"></TextView>
</LinearLayout>
